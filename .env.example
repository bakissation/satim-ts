# =============================================================================
# Satim SDK Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control

# =============================================================================
# Required Credentials (obtain from Satim)
# =============================================================================

# Merchant username received during registration
SATIM_USERNAME=your_merchant_username

# Merchant password received during registration
SATIM_PASSWORD=your_merchant_password

# Terminal ID assigned by bank to merchant (e.g., E010XXXXXX)
SATIM_TERMINAL_ID=E010XXXXXX

# =============================================================================
# API Configuration
# =============================================================================

# API Base URL - choose one:
# Test environment (default):
SATIM_API_URL=https://test2.satim.dz/payment/rest
# Production environment:
# SATIM_API_URL=https://satim.dz/payment/rest

# =============================================================================
# Optional Settings
# =============================================================================

# Default language for payment pages: fr, en, ar (default: fr)
SATIM_LANGUAGE=fr

# Currency code per ISO 4217 (default: 012 for DZD)
SATIM_CURRENCY=012

# HTTP method: POST (recommended) or GET (default: POST)
SATIM_HTTP_METHOD=POST

# Request timeout in milliseconds (default: 30000)
SATIM_HTTP_TIMEOUT_MS=30000

# Connection timeout in milliseconds (default: 10000)
SATIM_HTTP_CONNECT_TIMEOUT_MS=10000

# SSL certificate verification: true or false (default: true)
SATIM_HTTP_VERIFY_SSL=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: debug, info, warn, error (default: info)
SATIM_LOG_LEVEL=info

# Enable development logging: true or false
# Automatically disabled when NODE_ENV=production
SATIM_LOG_DEV=true
